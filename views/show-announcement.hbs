{{!-- Εμφάνιση Ανακοίνωσης που επιλέγει ο Χρήστης από τη σελίδα των Ανακοινώσεων--}}
<div class="head">Ανακοινώσεις</div>
<div class="main">
    <div class="announcements-container">
        <form class="search-announcements" method="GET" action="/announcements-admin/search">
            <div class="options">
                <label for="priority">Προτεραιότητα</label>
                <select id="priority" name="priority">
                    <option value="normal">Κανονική</option>
                    <option value="high">Υψηλή</option>
                    <option value="all" selected>Όλες</option>
                </select>
                <input type="submit" value="Search">
            </div>
        </form>
        <table>
            <thead>
                <tr class="title">
                    <th>Τίτλος</th>
                    <th>Ημερομηνία Δημοσίευσης</th>
                </tr>
            </thead>
            <tbody>
                {{#each announcements}}
                <tr class="title">
                    <td><a href="/announcements/id/{{announcement_ID}}">{{theme}}</a></td>
                    <td>{{ann_date}} {{ann_time}}</td>
                </tr>
                <tr>
                    <td class="message" colspan="2">{{ann_text}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="covid" >
    <div class="wrap">
        <div class="close" onclick="covid_off()">&times;</div>
        <div class="covidtext"></div>
    </div>
</div>